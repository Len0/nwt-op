<div class="navbar navbar-inverse navbar-fixed-top"  ng-controller="headerController">
	<div class="navbar-inner">
		<div class="container">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="brand" href="#">mHub</a>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li class="active"><a href="#"><%= t "nav.feed" %></a></li>
					<li>
						<a href="/#/marketer"><%= t "nav.marketer" %></a>
					</li>
					<li>
						<a href="/#/client"><%= t "nav.client" %></a>
					</li>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown"  data-no-turbolink="true">
							<%= I18n.locale.upcase %> <span class="caret"></span>
						</a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="#" ng-click="loadLok('/?locale=bs')" data-no-turbolink="true">BS</a>
								<a href="#" ng-click="loadLok('/?locale=en')" data-no-turbolink="true">EN</a>
								<a href="/users"> KK </a>
							</li>
						</ul>
					</li>
					<% if session[:user_type] == UserType.first.user_type %>
					<li>
						<%= link_to "Admin Panel", admin_panel_path('dashboard') %>
					</li>
					<% end %>
				</ul>
				<% if session[:user_id] == nil %>
                  <div ng-show={{visibility}}>
				<form accept-charset="UTF-8" class="navbar-form pull-right"  class="formclass" method="post">
					<input class="span2" type="text" name="username" ng-model="user.username" placeholder="<%= t "user.username" %>">

					<input class="span2" type="password" name="password" ng-model="user.password" placeholder="<%= t "user.password" %>">
					<button class="btn" ng-click="userLogin(user)">
						<%= t "nav.login" %>
					</button>


					<div class="row">
						<div class="span1">
                          <a href="/#/register">Register</a>

						</div>
						<div class="span3">
							<%= link_to (t "nav.forgotten_pass"), pwd_recovery_path, 'data-no-turbolink' => true, :style => "color:Gainsboro;" %>
						</div>

					</div>

				</form>
                  </div>
				<% else %>
				<div class="navbar-form pull-right" ng-show={{visibility}} >

					<div class="navbar-inner">
						<p class="nav navbar-text">
							<%= link_to (session[:user_name]), edit_user_path(User.find(session[:user_id])),'data-no-turbolink' => true  %>
						</p>
                      <button class="btn" ng-click="userLogout()" data-no-turbolink="true">Odjava</button>

					</div>

				</div>
				<% end %>

			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>

