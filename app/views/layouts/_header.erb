<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="#">mHub</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><a href="#">Feed</a></li>
          <li><a href="#">Search</a></li>
          <li><a href="#help">Help</a></li>
        </ul>
        <% if session[:user_id] == nil %>
            <form accept-charset="UTF-8" class="navbar-form pull-right" action="/user/login" class="formclass" method="post">
              <input class="span2" type="text" name="username" placeholder="Username">
              <input class="span2" type="password" name="password" placeholder="Password">
              <button type="submit" class="btn">Prijava</button>
              <%= link_to "Registracija", new_user_path%>
            </form>

        <% else %>
            <form class="navbar-form pull-right" action="/user/logout" class="formclass" method="get">
              <strong><%= session[:user_name] %></strong>
              <button type="submit" class="btn">Odjava</button>

            </form>
        <% end %>

      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>