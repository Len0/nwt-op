<div class="navbar navbar-inverse navbar-fixed-top"  ng-controller="headerController" >
	<div class="navbar-inner" ng-cloak>
		<div class="container">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="brand" href="#" style="text-shadow: 0 2px 1px rgba(0, 0, 0, 0.75); font-size: 27px;">mHub</a>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li>
						<div class="btn-group" dropdown is-open="status.isopen" ng-show="loggedIn&&isMarketer()">
							<button type="button" class="btn btn-inverse dropdown-toggle" ng-disabled="disabled">
								{{'MARKETER' | translate}}<span class="caret"></span>
							</button>
							<ul class="dropdown-menu" role="menu">
								<li>
									<a href="/#/createAdOffer">Nova reklama</a>
								</li>
								<li>
									<a href="/#/cjenovnik">Cjenovnik</a>
								</li>
							</ul>
						</div>
					</li>
					<li>
						<a href="/#/client">{{'CLIENT' | translate}}</a>
					</li>
                    <li>
                        <a href="/#/search">{{'SEARCH' | translate}}</a>
                    </li>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown"  data-no-turbolink="true"> {{kojiJezik}} <span class="caret"></span> </a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="#" ng-click="prevedi('ba')" data-no-turbolink="true">BA</a>
								<a href="#" ng-click="prevedi('en')" data-no-turbolink="true">EN</a>
                             </li>
						</ul>
					</li>

					<li ng-show="adminLog">
                      <a href="/admin_panel/dashboard"><%= t "nav.admin" %></a>
					</li>

				</ul>

                  <div id="loginForm" ng-show="loggedOut">
				<form accept-charset="UTF-8" class="navbar-form pull-right"  class="formclass" >
					    <input class="span2" type="text" name="username" style="height: 15px; margin-top: 10px; font-size: 11px;" ng-model="user.username" placeholder="{{'USERNAME' | translate}}">
						<input class="span2" type="password" name="password" style="height: 15px; margin-top: 10px; font-size: 11px;" ng-model="user.password" placeholder="{{'PASSWORD' | translate}}">
						<button class="btn-inverse" style="margin-top: 10px" ng-click="userLogin(user)">
							{{'LOGIN' | translate}}
						</button>

                  <div class="row">
                    <p style="color: red" ng-show="userCredsError">{{'AUTHFAIL' | translate}}</p>

                    <div class="span1">
                      <a style="color:Gainsboro;" href="/#/register">{{'REGISTER' | translate}}</a>
							</div>
							<div class="span2" style="margin-left: 5px;">
								<%= link_to (t "nav.forgotten_pass"), pwd_recovery_path, 'data-no-turbolink' => true, :style => "color:Gainsboro;" %>
							</div>
							<div class="span1">&nbsp;</div>


						</div>

					</form>
				</div>

				<div class="navbar-form pull-right" id="logoutForm" ng-show="loggedIn"  >

					<div class="navbar-inner">
						<p class="nav navbar-text">
							{{userName}}
						</p>
            						<button class="btn-inverse" ng-click="userLogout()" data-no-turbolink="true">
							{{'LOGOUT' | translate}}
						</button>
					</div>

				</div>

			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>

