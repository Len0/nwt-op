<div class="container">

	<!-- Main hero unit for a primary marketing message or call to action -->
	<div class="hero-unit">
		<h1>Korisnici</h1>
		<br>
		<div class="">
			<ul class="thumbnails">
					<% @users.each do |user| %>
						<li class="span2">
							<div class="col-xs-3 col-md-6">
								<div class="thumbnail"> 
									<%= 
									logger.debug user.avatar_url;
									if user.avatar? 
										image_tag(user.avatar_url ,size: "120x120",class: "imageClip") 
									else 
										image_tag('/bluebells_darker.jpg' ,size: "120x120",class: "imageClip")
									end%> </div>
								<div class="caption">
        							<h5><%= user.name %></h5>
        						</div>
        						<div class="thumbnail"> 
        						<%= link_to content_tag(:i,nil, :class=>"fa fa-pencil-square-o"), edit_user_path(user), class: "btn btn-sm btn-primary" %>
								<%= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
								<%= link_to content_tag(:i,nil, :class=>"fa fa-ban"), user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
								</div>
							</div>

					<% end %>

		</li>
		</ul>
		<br>
	</div>	
		<%= link_to 'New User', new_user_path, class: "btn btn-success", 'data-no-turbolink' => true %>

</div>
